app.controller('LoginCtrl', ['$scope', '$auth', '$location', function($scope, $auth, $location) {
  $scope.loginForm = {};

  $scope.loginForm.logIn = function() {
    $auth.submitLogin($scope.loginForm)
      .then(function(resp) {
        // handle success response
        console.log(resp);
        $location.path('');
      })
      .catch(function(resp) {
        // handle error response
        console.log(resp);
      });
  };
}]);
