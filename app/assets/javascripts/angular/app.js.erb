'use strict';

var app = angular.module('vocabmaster', ['ngRoute', 'ng-token-auth']);

app.config(['$authProvider', function($authProvider) {
  $authProvider.configure({
    apiUrl: ''
  });
}]);

app.config(['$routeProvider', function($routeProvider) {
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'StaticPagesCtrl'
    }).
    when('/login', {
      templateUrl: "<%= asset_path('users/login.html') %>",
      controller: 'LoginCtrl'
    })
    .
    when('/signup', {
      templateUrl: "<%= asset_path('users/signup.html') %>",
      controller: 'SignupCtrl'
    })
}]);
